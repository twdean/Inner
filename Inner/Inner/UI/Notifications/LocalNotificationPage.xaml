        <StackLayout Padding="15" Spacing="20">

            <Label
                x:Name="optionsDesc"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalOptions="Center"
                TextColor="White" />

        </StackLayout>

        <StackLayout
            x:Name="btnSms"
            Padding="15"
            HorizontalOptions="CenterAndExpand"
            Orientation="Horizontal"
            Spacing="20">

            <Image
                BackgroundColor="Transparent"
                HeightRequest="40"
                HorizontalOptions="StartAndExpand"
                Source="icons8speechbubble.png"
                VerticalOptions="CenterAndExpand"
                WidthRequest="40" />

            <Label
                BackgroundColor="Transparent"
                HorizontalOptions="StartAndExpand"
                Text="SMS"
                TextColor="White"
                VerticalOptions="CenterAndExpand" />

            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="btnSms_Tapped" />
            </StackLayout.GestureRecognizers>
        </StackLayout>

        <StackLayout
