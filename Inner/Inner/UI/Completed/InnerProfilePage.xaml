    <ScrollView>
        <StackLayout Padding="20" Margin="20,30,20,80" Spacing="0">      
        <Grid Padding="0" Margin="20,80,20,80">
             <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="lblFullName" Text="{Binding Name}" XAlign="Center" TextColor="White" FontSize="20" />
            <Image Grid.Row="1" Grid.Column="0" BackgroundColor="Transparent" HeightRequest="48" Source="icons8speechbubble.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="btnSms" NumberOfTapsRequired="1" Tapped="btnSms_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Row="1" Grid.Column="1" BackgroundColor="Transparent" HeightRequest="48" Source="icons8phone.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="btnPhone" NumberOfTapsRequired="1" Tapped="btnPhone_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Row="1" Grid.Column="2" BackgroundColor="Transparent" HeightRequest="48" Source="icons8videocall.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="btnVideo" NumberOfTapsRequired="1" Tapped="btnVideo_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <Image Grid.Row="1" Grid.Column="3" BackgroundColor="Transparent" HeightRequest="48" Source="icons8gmail.png">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer x:Name="btnEmail" NumberOfTapsRequired="1" Tapped="btnEmail_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <BoxView Grid.Row="2" Grid.ColumnSpan="4" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Color="White" />
        </Grid >
            <Grid Padding="0" Margin="30,0,30,80">
            <Label Grid.Row="0" Grid.Column="0" x:Name="lblBirthday" Text="Birthday" VerticalTextAlignment="Center" TextColor="White"/>
            <DatePicker
                        Grid.Row="0"
                        Grid.Column="1"
                        x:Name="birthDate"
                        DateSelected="Handle_DateSelected"
                        Format="dd/MM/yyyy">
                        <DatePicker.Margin>
                            <OnPlatform x:TypeArguments="Thickness">
                                <OnPlatform.Android>0,0,0,0</OnPlatform.Android>
                                <OnPlatform.iOS>0,0,0,0</OnPlatform.iOS>
                            </OnPlatform>
                        </DatePicker.Margin>
                    </DatePicker>
            </Grid>
