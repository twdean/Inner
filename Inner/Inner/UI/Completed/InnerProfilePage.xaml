<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Inner.UI.InnerProfilePage"
    BackgroundImage="background2.jpg">
   <AbsoluteLayout>
          <Image Source="Logo.png" x:Name="imgLogo"
               AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0,0.25,0.25" />

        <StackLayout Orientation="Horizontal"
            AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.60,0.35,150,100">
         <Label x:Name="lblFirstName" Text="{Binding FirstName}" FontSize="20" XAlign="Center" />

         <Label x:Name="lblLastName" Text="{Binding LastName}" FontSize="20" XAlign="Center" />
            
        </StackLayout>
     
 
    </AbsoluteLayout>
</ContentPage>
