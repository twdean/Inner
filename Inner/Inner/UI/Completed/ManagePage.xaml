<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Inner.UI.Completed.ManagePage"
    BackgroundImage="background2.jpg">
     <AbsoluteLayout>
         <Image Source="Logo.png" x:Name="imgLogo"
               AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5,0,0.25,0.25" />

         <Label x:Name="lblSummary" Text="Your Inner Circle" FontSize="20" XAlign="Center"
            AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.35,150,100"
        />
        <Grid x:Name="grdInnerSummary" RowSpacing="10" Padding="5"
              AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.6,0.5,280,150">
            
        </Grid>

        <Grid
            AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0.85,250,50">
            <Label Text="Frequency" Grid.Row="0" Grid.Column="0" />
            <Label Text="{Binding Frequency}" Grid.Row="0" Grid.Column="1"/>

            <Label Text="Next Reminder" Grid.Row="1" Grid.Column="0" />
            <Label Text="Nov 18, 2018" Grid.Row="1" Grid.Column="1"/>
 
        </Grid>
      
    </AbsoluteLayout>
</ContentPage>
