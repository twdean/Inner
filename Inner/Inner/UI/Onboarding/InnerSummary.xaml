<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Inner.UI.InnerSummary"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundImage="bluebackground.png">

    <AbsoluteLayout>
        <Image
            x:Name="imgLogo"
            AbsoluteLayout.LayoutBounds="0.5,0,0.25,0.25"
            AbsoluteLayout.LayoutFlags="All"
            Source="Logo.png" />

        <Label
            x:Name="lblSummary"
            AbsoluteLayout.LayoutBounds="0.5,0.35,250,100"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            FontSize="30"
            Text="Your Inner Circle"
            TextColor="White"
            XAlign="Center" />
        <Grid
            x:Name="grdInnerSummary"
            Padding="5"
            AbsoluteLayout.LayoutBounds="0.6,0.5,280,150"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            RowSpacing="10" />

        <Button
            AbsoluteLayout.LayoutBounds="0.5,0.75,270,150"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Transparent"
            Clicked="Next_Clicked"
            Image="icons8rightcircularwhite.png"
            Scale="0.5" />
    </AbsoluteLayout>
</ContentPage>
